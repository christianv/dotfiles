# Logs into gironde with a keychain access secret
# Follow https://www.netmeister.org/blog/keychain-passwords.html to add the "gironde" Keychain Item
function glogin() {
	expect <<EOD
set timeout -1
spawn gironde login
match_max 100000
expect {
  "Login successful!" {
    sleep 1
  }
  "User is already logged in*"
}
expect "Login successful"
send_user "Success!\n"
EOD
}
